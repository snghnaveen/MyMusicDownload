<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/song_card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_thumbnail"
            android:contentDescription="@string/thumbnail" />

        <TextView
            android:id="@+id/song_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/thumbnail"
            android:layout_toRightOf="@+id/thumbnail"
            android:maxLines="1"
            android:text="@string/song_name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/artist_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/song_tv"
            android:layout_alignStart="@+id/song_tv"
            android:layout_alignLeft="@+id/song_tv"
            android:maxLines="1"
            android:text="@string/artist_name"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/artist_tv"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="5dip"
            android:layout_marginRight="5dip"
            android:text="@string/size"
            android:textColor="#10bcc9"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cardview_light_background"/>

</androidx.cardview.widget.CardView>
